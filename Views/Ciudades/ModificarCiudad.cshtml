@model TransportesMR.Models.Ciudades
@{
    ViewData["Title"] = "Modificar Ciudad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: #FF0102;
    }
</style>

<!-- BARRA SUPERIOR -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Ciudades</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-action="ListadoMarcaVehiculo">Listado de Ciudades</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@ViewData["Title"]</h4>
            </div><!-- end card header -->
            <div class="card-body">

                <div class="live-preview">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form method="post" asp-action="ModificarCiudad">

                        <!--Envair ID-->
                        <input type="hidden" asp-for="IdCiudad" />

                        <div class="row g-3">
                            <!--FILA 1-->
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Ciudad" class="form-control" placeholder="Ingrese la Marca" />
                                    <label asp-for="Ciudad"></label>
                                    <span asp-validation-for="Ciudad"></span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-floating">
                                    <select asp-for="Estado" class="form-select">
                                        <option value="true">Activo</option>
                                        <option value="false">Deshabilitado</option>
                                    </select>
                                    <label asp-for="Estado"></label>
                                    <span asp-validation-for="Estado"></span>
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-3">
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">Modificar Ciudad</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

