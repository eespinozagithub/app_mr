@model TransportesMR.ViewModels.CamionMarcaVM
@{
    ViewData["Title"] = "Crear Camion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo camión</h3>
<form method="post" asp-action="setCrear">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.Patente"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camion.Patente" class="form-control" />
                    <span asp-validation-for="Camion.Patente" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.NumeroMotor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camion.NumeroMotor" class="form-control" />
                    <span asp-validation-for="Camion.NumeroMotor" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.Chasis"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camion.Chasis" class="form-control" />
                    <span asp-validation-for="Camion.Chasis" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.Año"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camion.Año" class="form-control" />
                    <span asp-validation-for="Camion.Año" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.Color"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camion.Color" class="form-control" />
                    <span asp-validation-for="Camion.Color" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="Camion.Estado"></label>
                </div>
                <div class="col-8">
                    <p><input type="radio" asp-for="Camion.Estado" value="false"/>
                    Inactivo</p>
                    <span asp-validation-for="Camion.Estado" class="text-danger"></span>

                    <p><input type="radio" asp-for="Camion.Estado" value="true"/>
                    Activo</p>
                    <span asp-validation-for="Camion.Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 mt-4">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Camion.IdMarca"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(u => u.Camion.IdMarca, Model.ListaMarca,"--Lista de marcas--",
                        new {@class = "form-control" })
                        <span asp-validation-for="Camion.IdMarca" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="row mt-4">
            <div class="col-3">
                <a asp-action="Index">Volver a lista</a>
            </div>
            <div class="col-5 offset-4">
                <button type="submit" class="btn btn-primary form-control">Crear</button>
                &nbsp;
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }