@model TransportesMR.Models.Camion
@{
    ViewData["Title"] = "Crear Camión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
        color: #FF0102;
    }
</style>

<!-- BARRA SUPERIOR -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Camión</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-action="ListadoCamion">Listado de Camión</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@ViewData["Title"]</h4>
            </div><!-- end card header -->
            <div class="card-body">               
                
                <div class="live-preview">
                    <form method="post" asp-action="CrearCamion">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row g-3">
                            <!--FILA 1-->
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <select id="idMarca" asp-items="@(new SelectList(ViewBag.Marcas,"IdMarca","Marca"))" class="form-select">
                                        <option value="">[Seleccione]</option>
                                    </select>
                                    <label>Marca Camión</label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <select asp-for="IdModelo" id="cmbModelos" class="form-select">
                                        <option value="">[Seleccione]</option>
                                    </select>
                                    <label asp-for="IdModelo"></label>
                                    <span asp-validation-for="IdModelo"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="NumeroCamion" class="form-control" placeholder="Ingrese el Número de Camión" autocomplete="off" />
                                    <label asp-for="NumeroCamion"></label>
                                    <span asp-validation-for="NumeroCamion"></span>
                                </div>
                            </div>

                            <!--FILA 2-->
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Patente" class="form-control" placeholder="Ingrese la Patente" autocomplete="off">
                                    <label asp-for="Patente"></label>
                                    <span asp-validation-for="Patente"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="NumeroMotor" class="form-control" placeholder="Ingrese el Número de Motor" autocomplete="off">
                                    <label asp-for="NumeroMotor"></label>
                                    <span asp-validation-for="NumeroMotor"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Chasis" class="form-control" placeholder="Ingrese el Número de Chasis" autocomplete="off" />
                                    <label asp-for="Chasis"></label>
                                    <span asp-validation-for="Chasis"></span>
                                </div>
                            </div>

                            <!--FILA 3-->
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Anio" class="form-control" placeholder="Ingrese el Año" autocomplete="off" />
                                    <label asp-for="Anio"></label>
                                    <span asp-validation-for="Anio"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Color" class="form-control" placeholder="Ingrese el Color" autocomplete="off" />
                                    <label asp-for="Color"></label>
                                    <span asp-validation-for="Color"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <input asp-for="Cilindrada" class="form-control" placeholder="Ingrese Cilindrada" autocomplete="off">
                                    <label asp-for="Cilindrada"></label>
                                    <span asp-validation-for="Cilindrada"></span>
                                </div>
                            </div>

                            <!--FILA 4-->
                            <div class="col-lg-4">
                                <div class="form-floating">
                                    <select asp-for="Estado" class="form-select">
                                        <option value="1">Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                    <label asp-for="Estado"></label>
                                    <span asp-validation-for="Estado"></span>
                                </div>
                            </div>            
                            <div class="col-lg-8">
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">Crear Camión</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/camionesAgregar.js"></script>
}