@model IEnumerable<TransportesMR.Models.Camion>
@{
    ViewData["Title"] = "Lista de Camiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Camiones</h3>
    </div>

    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear Camion</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Marcas</th>
                <th></th>
            </tr>

            @foreach (var camion in Model)
            {
                <tr>
                    <td>@camion.Patente</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@camion.IdVehiculo">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="getBorrar" asp-route-id="@camion.IdVehiculo">Borrar</a>

                    </td>

                </tr>
            }

        </table>
    }
    else
    {
        <p>No hay camiones</p>
    }

</div>

