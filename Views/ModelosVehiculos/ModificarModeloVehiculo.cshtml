@model TransportesMR.Models.ModeloVehiculo
@{
    ViewData["Title"] = "Editar Modelo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar una categoría</h3>
<form method="post" asp-action="EditarModeloVehiculo">
    <!--Importante para editar-->
    <input type="hidden" asp-for="IdModelo" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Modelo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="MarcaVehiculo"></label>
                </div>
                <div class="col-8">
                <select asp-for="IdMarca" class="form-select" asp-items="@(new SelectList(ViewBag.Marcas,"IdMarca","Marca")) ">
                    <option value="">[Seleccione]</option>
                </select>
                <span asp-validation-for="MarcaVehiculo.IdMarca" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Editar</button>
            &nbsp;
        </div>
    </div>
</form>

